{
  "name": "xlint",
  "version": "0.2.2",
  "description": "Powerful CLI for any lint (JSLint/JSHint +) solution.",
  "author": "Mariusz Nowak <medyk@medikoo.com> (http://www.medikoo.com/)",
  "main": "lint-path",
  "bin": {
    "xlint": "./bin/xlint"
  },
  "keywords": [
    "cli",
    "code",
    "debugger",
    "jslint",
    "jshint",
    "lint",
    "linter",
    "quality",
    "validation"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/medikoo/xlint.git"
  },
  "dependencies": {
    "cli-color": "git://github.com/medikoo/cli-color.git",
    "d": "~0.1.1",
    "deferred": "~0.7.2",
    "es5-ext": "~0.10.4",
    "fs2": "~0.2.1",
    "event-emitter": "~0.3.1",
    "memoizee": "~0.3.8",
    "next": "0.4",
    "path2": "0.1",
    "optimist": "0.3"
  },
  "devDependencies": {
    "tad": "0.2",
    "xlint-jslint-medikoo": "~0.1.2"
  },
  "scripts": {
    "lint": "node bin/xlint --linter=node_modules/xlint-jslint-medikoo/index.js --no-cache --no-stream",
    "lint-console": "node bin/xlint --linter=node_modules/xlint-jslint-medikoo/index.js --watch",
    "test": "node node_modules/tad/bin/tad"
  },
  "engines": {
    "node": ">=0.8"
  },
  "license": "MIT"
}
